            <TextBlock Text="Initial max" />
            <TextBox Text="{Binding Param2}" />

            <TextBlock Text="Repeat min" />
            <TextBox Text="{Binding Param3}" />

            <TextBlock Text="Repeate max" />
            <TextBox Text="{Binding Param4}" />
        </StackPanel>
    </DataTemplate>

