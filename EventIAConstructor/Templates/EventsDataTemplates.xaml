            <!--Шаблоны находятся в .\ViewModel\Dictionary\ConditionDataTemplate.xaml-->
            <ContentPresenter Content="{Binding Self}"
                                      ContentTemplateSelector="{StaticResource ConditionDataTemplateSelector}" />
        </StackPanel>
    </DataTemplate>

